

*
  box-sizing border-box
  margin 0
  padding 0
  
html
  font-family 'Montserrat', sans-serif
  font-size 16px

body
  background #f6f6f6

.header
  background #fff
  padding 10px 0

  img
    center(300px)
    display block
    width 300px
    margin 0 auto

.center-wrapper
  center(800px)
  padding-bottom 65px
  padding-top 90px
  text-align center
  color #fff


.hint
  font-size 12px
  color #fff

.title
  font-size 40px
  margin-bottom 15px

.subtitle
  font-size 18px
  font-weight normal

.button-publish
  display block
  max-width 470px
  padding 15px 0
  background #0096ff
  font-weight bold
  text-align center
  margin 15px auto
  color #fff
  text-decoration none
  
  &:hover
    background darken(#0096ff, 20%)

.banner
  background url('/img/background-banner.jpg') center center no-repeat
  background-size cover
  height 355px

.trade-list
  center(1200px)
  padding 1em 2em
  overflow hidden


.item-trade
  lost-column 1/3 3
  background #fff
  margin-bottom 1em
  box-shadow 0px 2px 2px 2px #e6e6e6

.item-trade-header
  text-align center
  
.item-trade-header
.trader-info
  border-bottom 1px solid #e6e6e6
  padding 2em 1em
  
  p
    font-size 20px
  
  .offered
  .wanted
    font-size 28px
    word-wrap break-word
    
  .offered
    color #4790cd
  
  .wanted
    color #7fc241

.trader-avatar
  border-radius 5px
  float left
  margin-right 2%
  
.trader-name
.trader-screen-name
  display block

.trader-name
  font-size 15px
  font-weight bold

.trader-screen-name
  font-size 13px
  color #858585

.trade-time-ago
  color #858585
  float right
  font-size 13px

.trade-call-for-action
  padding .7em

.button
  background #7fc241
  border-radius 3px
  color #fff
  display block
  font-size 21px
  font-weight bold
  margin 0 auto
  padding 10px 0
  text-align center
  text-decoration none
  
  &:hover
    background darken(#7fc241, 25%)